{
  "include": ["src", "types"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "lib": ["dom", "esnext", "es2018"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
